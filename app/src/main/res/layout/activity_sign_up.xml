<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.kelvinkamau.www.fonty.SignUpActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="166dp"
        android:layout_height="40dp"
        android:text="GDG Kisii"
        android:textColor="@color/colorAccent"
        android:textSize="35sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.209"
        app:layout_constraintHorizontal_bias="0.646" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="263dp"
        android:layout_height="51dp"
        android:text="Join our developer community"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.38"
        app:layout_constraintHorizontal_bias="0.506" />

    <ImageView
        android:layout_width="33dp"
        android:layout_height="34dp"
        app:srcCompat="@drawable/ic_gdgd"
        app:layout_constraintRight_toLeftOf="@+id/text1"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="55dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.851"
        app:layout_constraintVertical_bias="0.206" />

    <EditText
        android:id="@+id/uName"
        android:layout_width="280dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Username"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/user"
        android:drawableTint="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:maxLength="20"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintVertical_bias="0.499" />

    <EditText
        android:id="@+id/password"
        android:layout_width="280dp"
        android:maxLength="16"
        android:layout_height="47dp"
        android:ems="10"
        android:textColor="@color/colorAccent"
        android:hint="Enter Password"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/password"
        android:textColorHint="@color/colorAccent"
        android:drawableTint="@color/colorAccent"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.68" />

    <Button
        android:id="@+id/button2"
        android:layout_width="263dp"
        android:layout_height="55dp"
        android:text="SIGN UP"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintVertical_bias="0.852" />

    <EditText
        android:id="@+id/email"
        android:layout_width="280dp"
        android:layout_height="44dp"
        android:ems="10"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:hint="Enter Email"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/email"
        android:textColorHint="@color/colorAccent"
        android:drawableTint="@color/colorAccent"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintVertical_bias="0.589" />

    <TextView
        android:id="@+id/logintext"
        android:layout_width="261dp"
        android:layout_height="43dp"
        android:text="By clicking Sign Up you're agreeing to the Terms and Conditions of using GDG Kisii App."
        android:textColor="#a8a8a8"
        android:textSize="12sp"
        android:textAlignment="center"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.954"
        tools:layout_editor_absoluteX="36dp" />

</android.support.constraint.ConstraintLayout>
